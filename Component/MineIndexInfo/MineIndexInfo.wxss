.background {

  width: 100%;
  height: 10rem;
}


.info {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  height: 6rem;
  margin-top: -1rem;
  background-color: white;
}

.avatar {
  width: 6em;
  height: 6em;
  margin: -1em 0 0 0.5em;
}

image {
  width: 100%;
  height: 100%;
}

.avatar image {
  border-radius: 50%;
}

.post {
  height: 50%;
  width: 65%;
  display: flex;
  flex-direction: row;
}

.post .box:nth-of-type(2) {
  border-left: solid rgb(237,237,237);
  border-right: solid rgb(237,237,237);
}

.edit {
  height: 1.8em;
  width: 65%;
  margin: 0.3em 0 0 0;
  color: greenyellow;
  border: solid 2px greenyellow;
  border-radius: 0.3em;
  display: flex;
  align-items: center;
  justify-content: center;
}

.box {
  font-size: small;
  width: 30%;
  margin: 1em 1%;
  text-align: center;
}


.information {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: 4.5em;
}

.nickname {
  font-size: larger;
  text-align: center;
  display: flex;
  align-items: center;
  margin: 0 0.3em;
}

.sex {
  display: flex;
  align-items: center;
}

.signature {
  width: 100%;
  font-size: small;
  margin: 0 0.5em;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}