.background {
  width: 100%;
  height: 10rem;
}


.info {
  box-sizing: border-box;
  padding: 0 .25rem;
  display: grid;
  grid-template-columns: 6rem auto;
  grid-template-rows: 3rem 3rem 2rem  auto;
  grid-gap: .5rem .5rem;
  height: 12rem;
  background-color: white;
}

.avatar {
  grid-column: 1 / 2;
  grid-row: 1 / 3;
  box-sizing: border-box;
  padding: .25rem 0;
}

.avatarImage {
  border-radius: 50%;
}

.post {
  grid-column: 2 / 3;
  grid-row: 1 / 2;
  display: flex;
}

.post .postItem:nth-of-type(2) {
  border-left: solid rgb(237,237,237);
  border-right: solid rgb(237,237,237);
}

.edit {
  grid-column: 2 / 3;
  grid-row: 2 / 3;
  height: 2rem;
  color: greenyellow;
  border: solid .125rem greenyellow;
  text-align: center;
}

.editText {
  line-height: 1.75rem;
}

.postItem {
  font-size: small;
  width: 30%;
  margin: 1em 1%;
  text-align: center;
}

.nickname {
  font-size: 20px;
  grid-column: 1 / 2;
  grid-row: 3 / 4;
  text-align: center;
}

.sex {
  grid-column: 2 / 3;
  grid-row: 3 / 4;
}

.signature {
  grid-column: 1 / 3;
  grid-row: 4 / 5;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}