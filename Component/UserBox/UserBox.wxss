.userBox {
  position: relative;
  box-sizing: border-box;
  margin: .5rem 0 .5rem;
  width: 100%;
  height: 3rem;
  display: flex;
  flex-flow: column wrap;
  align-content: flex-start;
}

.head {
  display: inline-block;
  width: 3em;
  height: 3em;
  margin: 0 .5em 0 0;
}

.image {
  height: 100%;
  width: 100%;
  border-radius: 50%;
}

.name {
  box-sizing: border-box;
  height: 1em;
  margin: .25em 0;
  width: 60%;
}

.time {
  font-size: small;
  color: rgb(200, 200, 200);
  width: 60%;
}

.like {
  display: inline-block;
  display: flex;
  position: absolute;
  right: 1.5rem;
  bottom: 1rem;
  height: 1.3rem;
  width: 2rem;
}

.likeIcon {
  height: 100%;
  width: 1.3rem;
  margin: 0 .5rem 0 0;
}

.likeIcon .image {
  border-radius: 0;
  height: 100%;
  width: 100%;
}
