/**index.wxss**/
page {
  background-color: rgb(243, 243,243);
  height: 100%;
}

.bigbox {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.postinfo {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.nav {
  position: fixed;
}

.tab {
  display: flex;
  flex-direction: row;
}

.tab view {
  margin: 0.5em 1em;
  display: inline-block;
}

.cur {
  color: green;
  border-bottom: 5rpx solid green;
}

.swiper {
  flex-grow: 1;
}

swiper{
  height: 100%;
}

.posts {
  display: flex;
  flex-direction: column;
}

.post {
  position: relative;
  margin: 5px 2.5%;
  background-color: #fff;
  width: 95%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  border-radius: 10px;
}

.avatar {
  width: 3.5em;
  height: 3.5em;
}

.avatar image {
  margin: 10% 0 0 10%;
  width: 90%;
  height: 90%;
  border-radius: 50%;
}

.box {
  margin-left: 5%;
  width: auto;
  height: 3.5em;
  display: flex;
  flex-wrap: wrap;
}

scroll-view {
  height: 100%;
}

.publisher {
  width: 100%;
  margin-top: 0.5em;
}

.time, .location {
  width: auto;
  margin: 0.2em 1.5em 0.5em 0;
  font-size: small;
}

.title {
  font-size: larger;
  width: 90%;
  height: 1.5em;
  margin: 0 5%;
}

.outline {
  width: 90%;
  margin: 0 5%;
}

.thum {
  display: flex;
  flex-direction: row;
  width: 90%;
  margin: 0.3em 5% 0 5%;
  height: 6em;
}

.thum .thumimage {
  height: 100%;
  width: 30%;
  margin: 0 2% 0 0;
}

.thumimage image {
  width: 100%;
  height: 100%;
  border-radius: 0.5em;
}

.thumone {
  width: 90%;
  margin: 0.3em 5% 0 5%;
}

.thumone view {
  width: 66.7%;
  height: auto;
}

.thumone image {
  width: 100%;
  border-radius: 5%;
}

.footer {
  margin: 0 5% 0.5em 5%;
  height: 20px;
  font-size: small;
}