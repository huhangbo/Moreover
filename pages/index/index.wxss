/**index.wxss**/
page {
  background-color: rgb(243, 243,243);
  height: 100%;
}

.bigbox {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.nav {
  position: fixed;
}

.tab {
  display: flex;
  flex-direction: row;
}

.tab view {
  margin: 0.5em 1em;
  display: inline-block;
}

.cur {
  color: green;
  border-bottom: 5rpx solid green;
}

.swiper {
  flex-grow: 1;
}

swiper{
  height: 100%;
}

.post {
  margin: 10px 2.5%;
  background-color: #fff;
  width: 95%;
  height: 240px;
  display: flex;
  flex-wrap: wrap;
  border-radius: 10px;
}

.avatar {
  position: relative;
  width: 10%;
  margin: 0 3%;
  height: 50px;
}

.avatar image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.box {
  width: 84%;
  height: 50px;
  display: flex;
  flex-wrap: wrap;
}

scroll-view {
  height: 100%;
}

.publisher {
  width: 100%;
  height: 50%;
  font-size: large;
}

.time, .location {
  height: 50%;
  width: 35%;
  font-size: small;
}

.title {
  font-size: large;
  width: 90%;
  height: 25px;
  margin: 0 5%;
}

.outline {
  width: 90%;
  height: 40px;
  margin: 2px 5%;
}

.thum {
  display: flex;
  flex-direction: row;
  width: 90%;
  margin: 0.5px 5%;
  height: 90px;
}

.thum .thumimage {
  height: 100%;
  width: 30%;
  margin: 0 2% 0 0;
  position: relative;
}

.thumimage image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.footer {
  margin: 5px 5%;
  height: 20px;
  font-size: small;
}