page {
  background-color: #fff;
}

.bigbox {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.bg {
  position: absolute;
  width: 100%;
  height: 20%;
  z-index: -1;
}

.back {
  height: 100%;
  font-size: x-large;
  color: rgb(117,117,117);
}

.info {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  height: 6.5em;
  margin-top: 5.5em;
  background-color: white;
}

.avatar {
  position: relative;
  width: 25%;
  height: 0;
  padding-top: 25%;
  border-radius: 50%;
}

.avatar image {
  position: absolute;
  left: 0;
  top: 0;
}

image {
  width: 100%;
  height: 100%;
}

.post {
  height: 50%;
  width: 75%;
  display: flex;
  flex-direction: row;
}

.post .box:nth-of-type(2) {
  border-left: solid rgb(237,237,237);
  border-right: solid rgb(237,237,237);
}

.edit {
  height: 1.7em;
  width: 65%;
  text-align: center;
  color: greenyellow;
  border: solid greenyellow;
}

.box {
  font-size: small;
  width: 30%;
  margin: 1em 1%;
  text-align: center;
}


.information {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: 4.5em;
}

.nickname {
  font-size: larger;
  text-align: center;
  display: flex;
  align-items: center;
  margin: 0 0.3em;
}

.sex {
  display: flex;
  align-items: center;
}

.signature {
  width: 100%;
  font-size: small;
  margin: 0 0.5em;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sticky {
  box-sizing: border-box;
  border-top: solid 1px rgb(237,237,237);
  border-bottom: solid 1px rgb(237,237,237);
  height: 3em;
  display: flex;
  align-items: center;
  width: 100%;
  padding: 0 0.5em;
}

.collections {
  flex-flow: column nowrap;
  width: 100%;
}

.collection {
  background-color: #fff;
  padding: 0.4em 2.5%;
  display: flex;
  flex-direction: row;
  height: 6em;
  border-bottom: solid rgb(237,237,237);
}

.postimg {
  height: 96%;
  margin: 1% 2%;
  width: 25%;
}

.postimg image {
  border-radius: 10%;
}

.detail {
  width: 70%;
}

.title {
  font-size: large;
  height: 1.5em;
  margin-top: 0.5em;
}

.location {
  font-size: small;
  height: 2em;
}

.likeco {
  font-size: small;
  flex: 1 0 auto;
  display: flex;
  flex-direction: row;
}

.like {
  color: rgb(200, 200, 200);
}

.likeco view {
  padding: 0.5em 0.5em 0 0;
  color: rgb(200, 200, 200);
}