/* pages/mine/mine.wxss */
.mine {
  height: 200px;
  display: flex;
  flex-wrap: wrap;
}

.mine .avatar {
  position: relative;
  width: 25%;
  height: 0;
  padding-top: 25%;
}

.avatar image {
  position: absolute;
  top: 0;
  left: 10%;
  width: 90%;
  height: 90%;
  border-radius: 50%;
}
.infor {
  width: 40%;
  margin: 0 5%;
}

.name {
  font-size: larger;
}

.post {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.post .box {
  text-align: center;
  width: 33%;
}

.service {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.service .icon {
  width: 25%;
  height: 60px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

#servicetext{
  width: 100%;
  font-size: larger;
  margin: 1em;
}

.service .icon view {
  width: 35%;
}

.service .icon image {
  width: 100%;
}

